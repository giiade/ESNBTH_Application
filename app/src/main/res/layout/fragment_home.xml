<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F">

    <TextView
        android:text="Future Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/btnNews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFA00E"
            android:layout_weight=".35"
            android:layout_marginRight="15dp"
            android:text="News"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/btnEvents"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#7CAF00"
            android:layout_weight=".65"
            android:text="Events"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/btnAboutKarlskrona"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#7CAF00"
            android:layout_weight=".65"
            android:layout_marginRight="15dp"
            android:text="About Karlskrona"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="22sp"/>
        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFA00E"
            android:layout_weight=".35"
            android:text="About Us"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="22sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <Button
            android:id="@+id/btnVisitUs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#16A5D7"
            android:text="Visit Us"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="22sp"/>

    </LinearLayout>

</RelativeLayout>