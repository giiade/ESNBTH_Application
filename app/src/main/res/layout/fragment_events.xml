<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="se.ESNBTH.esnbth.Fragments.Fragment_news">

    <TextView
        android:text="@string/event_txt"
        android:id="@+id/title_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Titulo"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ListView
        android:id="@+id/eventsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_events"
        android:layout_alignParentBottom="true"
        android:divider="@color/gray_dark"
        android:dividerHeight="2dp"
        android:padding="@dimen/activity_horizontal_margin_small">

    </ListView>


</RelativeLayout>
